<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:padding="8dp"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/user_show_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:padding="8dp"
        android:textColor="#ee6c4d"
        android:textSize="10sp">

    </TextView>
    <ImageView
        android:id="@+id/messageIv"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginStart="5dp"
        android:background="@drawable/background_left"
        android:padding="8dp"
        android:layout_marginTop="25dp"

        />

    <ImageView
        android:id="@+id/messageFile"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="5dp"
        android:padding="8dp"
        android:background="@drawable/background_leftfile"
        android:layout_marginTop="25dp"
        >
    </ImageView>

    <TextView
        android:id="@+id/show_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_show_message"
        android:layout_marginStart="5dp"
        android:layout_marginTop="-5dp"
        android:padding="8dp"
        android:background="@drawable/background_left"
        android:textColor="@color/black"
        android:textSize="18sp"

        />

    <ImageView
        android:id="@+id/messageLocation"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="5dp"
        android:padding="8dp"
        android:background="@drawable/background_leftlocation"
        android:layout_marginTop="25dp"
        >
    </ImageView>


</RelativeLayout>